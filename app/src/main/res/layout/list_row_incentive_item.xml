<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/row_incentive_item_customer_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="Customer No"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/row_incentive_item_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="Customer Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/row_incentive_item_stock_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="Incentive Item"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/row_incentive_item_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Incentive Qty"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/row_incentive_item_paid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:focusable="false"
        android:textStyle="bold" />

</LinearLayout>